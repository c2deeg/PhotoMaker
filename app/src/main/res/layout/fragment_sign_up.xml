<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context=".Fragments.SignUpFragment.SignUpFragment">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="LOGIN"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_margin="30dp"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/poppins_semibold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Create Your Account"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/roboto_bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="You'll be able to use this account to log in to\n photomaker"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/textcolor"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:fontFamily = "@font/poppins_regular"
            android:textColor="@color/textcolorhint"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jackson"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:imeOptions="actionNext"
            android:textColorHint="#575454"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:singleLine="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL ADRESS"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:fontFamily = "@font/poppins_regular"
            android:textColor="@color/textcolorhint"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name@example.com"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:imeOptions="actionNext"
            android:textColorHint="#575454"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:singleLine="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textSize="16sp"
            android:fontFamily = "@font/poppins_regular"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolorhint"/>
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="*******"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:inputType="textWebPassword"
            android:textColorHint="#575454"
            android:background="@android:color/transparent"
            android:singleLine="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:visibility="invisible"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with google"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:visibility="invisible"
            android:fontFamily="@font/poppins_semibold"
            android:drawableLeft="@drawable/google"
            android:paddingStart="10dp"
            android:background="@drawable/roundcorner_stroke"
            android:backgroundTint="@color/bgcolor"

            android:layout_marginTop="30dp"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_facebbok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with facebbok"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_semibold"
            android:drawableLeft="@drawable/facebooks"
            android:paddingStart="10dp"
            android:visibility="invisible"
            android:background="@drawable/roundcorner_stroke"
            android:backgroundTint="@color/bgcolor"

            android:layout_marginTop="30dp"/>




    </LinearLayout>

